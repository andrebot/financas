  "version": "0.2.0",
  "configurations": [
    {
        "name": "Debug Main Process",
        "type": "node",
        "request": "launch",
        "runtimeVersion": "9.2.0",
        "program": "${workspaceFolder}/src/server/index.js"
    },
    {
      "name": "Run Mocha Back",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "stopOnEntry": false,
      "args": ["-w", "--file", "src/tests/imports.js", "src/server/**/*.spec.js"],
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": null,
      "env": { "NODE_ENV": "test" }
    },
    {
      "name": "Run Mocha Front",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "stopOnEntry": false,
      "args": ["--require", "babel-core/register", "-w", "--file", "tests/client/imports.js", "src/client/**/*.spec.js"],
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": null,
      "env": { "NODE_ENV": "test" }
    }
  ]
}